
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users
    // - Anyone can read user profiles
    // - Users can only create and update their own profile
    // - No one can delete user profiles
    match /users/{userId} {
      allow read: if true;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;

      // Following/Followers
      // Users can only manage their own following/followers list
      match /following/{targetId} {
        allow read, create, delete: if request.auth != null && request.auth.uid == userId;
      }
      match /followers/{followerId} {
         allow read: if request.auth != null;
         allow create, delete: if request.auth != null && request.auth.uid == followerId;
      }
    }

    // Posts
    // - Anyone can read posts
    // - Authenticated users can create posts
    // - Only the author can update/delete their post
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Showcases
    // - Anyone can read showcases
    // - Authenticated users can create showcases
    // - Authors can update their own showcase
    // - Any authenticated user can upvote
    match /showcases/{showcaseId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        (request.resource.data.userId == request.auth.uid || 
         request.resource.data.upvotes == resource.data.upvotes + 1);
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
